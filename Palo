<div id="copyToast" class="copy-toast">Copied loadstring!</div>

<script>
  let loaders = [];

  const textarea = document.getElementById('scriptCode');
  const code = document.getElementById('highlightCode');
  const wrapper = textarea.parentElement;

  function updateHighlight() {
    let text = textarea.value || ' ';
    text = text.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
    code.innerHTML = text;
    Prism.highlightElement(code);
    wrapper.scrollTop = textarea.scrollTop;
    wrapper.scrollLeft = textarea.scrollLeft;
  }

  textarea.addEventListener('input', updateHighlight);
  textarea.addEventListener('scroll', () => {
    wrapper.scrollTop = textarea.scrollTop;
    wrapper.scrollLeft = textarea.scrollLeft;
  });

  function syncHighlight() {
    updateHighlight();
    setTimeout(updateHighlight, 100);
  }

  function openModal() {
    document.getElementById('loaderModal').classList.add('active');
    syncHighlight();
  }

  function closeModal() {
    document.getElementById('loaderModal').classList.remove('active');
  }

  document.getElementById('loaderModal').addEventListener('click', e => {
    if (e.target === e.currentTarget) closeModal();
  });

  function saveLoader() {
    const name = document.getElementById('loaderName').value.trim();
    const code = document.getElementById('scriptCode').value.trim();

    if (!name) {
      alert("Loader name is required.");
      return;
    }
    if (!code) {
      alert("Script cannot be empty.");
      return;
    }

    const newLoader = {
      name,
      code,
      published: false
    };

    loaders.push(newLoader);
    renderLoaders();
    closeModal();
  }

  function renderLoaders() {
    const container = document.getElementById('loaderList');
    container.innerHTML = '';

    if (loaders.length === 0) {
      container.innerHTML = '<div class="placeholder" style="text-align:center; padding: 20px; color: rgba(255,255,255,0.5); font-style: italic;">No loaders yet. Create one!</div>';
      return;
    }

    loaders.forEach((loader, index) => {
      const item = document.createElement('div');
      item.className = 'loader-item';
      item.innerHTML = `
        <div class="loader-info">
          <h3>${loader.name}</h3>
          <p>Script length: ${loader.code.length} chars</p>
        </div>
        <div class="loader-actions">
          <button class="publish-btn ${loader.published ? 'published' : 'unpublished'}" onclick="togglePublish(${index})">
            ${loader.published ? 'Published' : 'Unpublished'}
          </button>
          <button class="copy-btn" onclick="copyLoader(${index})">
            <i class="fa-solid fa-copy"></i> Copy Loader
          </button>
        </div>
      `;
      container.appendChild(item);
    });
  }

  function togglePublish(index) {
    loaders[index].published = !loaders[index].published;
    renderLoaders();
  }

  function copyLoader(index) {
    const loader = loaders[index];
    const fakeUrl = `https://example.com/loaders/${encodeURIComponent(loader.name)}-${Date.now()}.lua`;
    const loadstring = `loadstring(game:HttpGet("${fakeUrl}"))()`;

    navigator.clipboard.writeText(loadstring).then(() => {
      const toast = document.getElementById('copyToast');
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 2500);
    }).catch(() => {
      alert("Copy failed. Here's the code:\n\n" + loadstring);
    });
  }
</script>

</body>
